{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["bun"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "rootDir": "./src"
  },

  "include": ["**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
